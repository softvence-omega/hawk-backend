model Property {
  id                 String      @id @default(uuid())
  title              String      @unique
  propertyNote       String?
  description        String?
  status             PropertyStatus @default(PENDING)
  images             PropertyImage[]    

  // ðŸ”¹ Size & Layout
  squareFeet         Int? 
  interiorTotalSqFt   Int?
  interiorlivableSqFt   Int?
  interiorFinishedSqFt       Int?
  lotSizeSqFt        Int?
  bedrooms           Int?
  bathrooms          Int?
  stories            Int?
  basement           Boolean?
  roomTypes          String[]
  totalParkingSpaces Int?
  attachedGarageSpaces Int?

  // ðŸ”¹ Location
  address            String    
  city               String
  region             String
  zipCode            String          
  latitude           Float?
  longitude          Float?

  // ðŸ”¹ Auction Info
  isAuction          Boolean     @default(false)
  auctionStartDate   DateTime?
  auctionEndDate     DateTime?
  auctionCountdown   Int?        // optional seconds or minutes left
  dom                Int?        // days on market

  // ðŸ”¹ Pricing & Financials
  price              Int?
  arv                Int?        // After Repair Value
  rehabEstimate      Int?
  resale90Day        Int?
  pricePerSqFt       Int?
  taxAssessedValue   Int?
  annualTaxAmount    Int?
  listingTerms       String[]

  // ðŸ”¹ Construction Info
  yearBuilt          Int?
  isNewConstruction  Boolean?
  hasFireplace       Boolean?
  type               String?     // e.g., Single Family
  subtype            String?     // e.g., Single Family Residence
  roofType           String?
  material           String?     // e.g., Frame
  heating            String?
  cooling            String?

  // ðŸ”¹ Features
  appliances         String[]    // Dishwasher, Water Heater, etc.
  features           String[]    // Fireplace, Formal Dining, etc.
  diningRoomFeatures  String[]
  familyRoomFeature   String[]
  kitchenRoomFeature  String[]
  parkingFeatures    String[]
  fireplaceFeatures  String[]

  // ðŸ”¹ levels
  diningLevel        String?
  familyRoomLevel    String?
  kitchenLevel        String?
  livingRoomLevel     String?
      

  // ðŸ”¹ Utilities
  sewer              String?
  water              String?
  propaneRental      Boolean?
  electricUtility    Boolean?

  // ðŸ”¹ Metadata
  propertySource     PropertySource @default(MANUAL)
  parcelNumber       String?
  createdById       String?
  createdBy         User? @relation(fields: [createdById], references: [id])

  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  // ðŸ”¹ Relationships
  bids               Bid[]
  comps              Comp[]      // if you have comparables
}



model PropertyImage {
  id         String  @id @default(uuid())
  propertyId String
  imageUrl   String
  publicId   String
  property   Property @relation(fields: [propertyId], references: [id])
}




model Bid {
     id                 String      @id @default(uuid())
     Property Property[]
}




model Comp {
   id                 String      @id @default(uuid())  
   Property Property[]
}

 
enum PropertyStatus {
  PENDING
  ACTIVE
  APPROVED
  REJECTED
  SOLD
}

enum PropertySource {
  MANUAL
  SCRAPED
}
